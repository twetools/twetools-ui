{
  "name": "twetools-ui",
  "version": "1.0.0",
  "description": "Shared UI component library for twetools applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/compiled.css",
  "scripts": {
    "build": "npm run examples-build && npm run build-lib && npm run extract-css",
    "build-lib": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run copy-css",
    "copy-css": "copyfiles -u 1 src/**/*.css dist/ && copyfiles -f app/globals.css dist/",
    "extract-css": "powershell -Command \"$cssFiles = Get-ChildItem .next/static/css/*.css | Sort-Object Length -Descending; Copy-Item $cssFiles[0].FullName dist/compiled.css\"",
    "dev": "tsc --watch",
    "examples-dev": "next dev -p 3000",
    "examples-build": "next build",
    "examples-start": "next start -p 3000",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run examples-build",
    "size-limit": "npm run build-lib && ls -lah dist/"
  },
  "peerDependencies": {
    "@tabler/icons-react": "^3.35.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "twetools",
    "typescript"
  ],
  "author": "Troy Edwards <troy@twetools.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twetools-admin/twetools-ui.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "apexcharts": "^5.3.5",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "flatpickr": "^4.6.13",
    "react-apexcharts": "^1.7.0",
    "react-dropzone": "^14.3.8",
    "simplebar-react": "^3.3.2",
    "swiper": "^12.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13"
  }
}
